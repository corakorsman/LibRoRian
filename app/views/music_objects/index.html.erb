<div class="hero-unit">
  <h1><i class="icon-music"></i> Music <i class="icon-music"></i></h1>
  <p>Collection of music in da house!</p>
  <p>
    <%= link_to "New music object", new_music_object_path, :class => 'btn btn-primary btn-large' %>
    <%= form_tag search_music_objects_path, :method => :get do %>
      <%= text_field_tag "search", params[:search] %>
      <%= submit_tag "Search tag" %>
    <% end %>
  </p>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Medium</th>
      <th>Genre</th>
      <th>Actions<th>
    </tr>
  </thead>
<tbody>
  <% @music_objects.each do |music_object| %>
    <tr>
    <td><%= link_to music_object.title, music_object %></td>
    <td><%= music_object.artist %></td>
    <td><%= music_object.medium %></td>
    <td><%= music_object.genre %></td>
    <td><%= link_to "Edit music object", edit_music_object_path(music_object), :class => 'btn btn-mini' %>
        <%= link_to "Delete music object", music_object, :method => :delete,
            :confirm => "Are you sure you want to delete this music object?",
            :class => 'btn btn-mini btn-danger' %>
    </td>
  </tr>
  <% end %>
 </tbody>
</table>